<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitivity.NavigationActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/navigation_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/navigation_RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/navigation_but_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/navigation_but_2"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/navigation_but_3"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/navigation_but_4"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:id="@+id/navigation_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/navigation_RadioGroup"
        android:layout_centerHorizontal="true"
        android:text="立即体验"
        android:visibility="gone"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>